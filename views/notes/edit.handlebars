<a href="/">Voltar</a>

<h2 class="pt-3">Editar a nota: {{ note.title }}</h2>

<form action="/notes/update" method="POST" class="mt-3">
    <input type="hidden" name="id" value="{{ note._id }}">
    <div class="mb-3">
        <label for="title" class="form-label">Título:</label>
        <input type="text" placeholder="O que você pretende fazer?" class="form-control" name="title" id="title" value="{{ note.title }}">
    </div>
    <div class="mb-3">
        <label for="description" class="form-label">Descrição:</label>
        <textarea placeholder="Descreva melhor esta nota..." name="description" id="description" class="form-control">{{ note.description }}</textarea>
    </div>
    <button type="submit" class="btn btn-primary">Editar nota</button>
</form>